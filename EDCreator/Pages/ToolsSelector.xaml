<Page x:Class="FDCreator.Pages.ToolsSelector"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FDCreator.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="410" d:DesignWidth="640"
      Title="ToolsSelector">
<Page.Resources>
</Page.Resources>
    <StackPanel Orientation="Vertical">
        
        <TextBlock Text="Select your tool"/>
        <RadioButton x:Name="RbDumbIron" Content="Dumb Iron"/>
        <TextBlock Text="Smart tools"/>
        <RadioButton x:Name="RbTelescope" Content="Telescope"/>
        <RadioButton x:Name="RbGdis" Content="GDIS"/>
        <RadioButton x:Name="RbArc" Content="ARC"/>
        <Button Content="Proceed >>" MaxWidth="100" Click="Button_Click" />
    </StackPanel>
</Page>
