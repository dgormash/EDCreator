<Page x:Class="EDCreator.Pages.WorkshopArea"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EDCreator.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="181.6" d:DesignWidth="618.4"
      Title="WorkshopArea">

    <StackPanel>
        <TextBlock Text="Выбор файлов" FontWeight="Bold"/>
        <TextBlock Text="Путь к файлам инспекций" FontWeight="Bold"/>
       <StackPanel Orientation="Horizontal">
           <TextBox x:Name="PathString" IsEnabled="False" HorizontalAlignment="Left" Width="500" Padding="1">
                [пусто...]
            </TextBox>
           <Button x:Name ="Choose" Content="..." Width="50" Margin="10 0 0 0"/>
       </StackPanel>
        <Button x:Name="Proceed" Content="Обработать" MaxWidth="100" HorizontalAlignment="Right" Margin="0 10 10 0"></Button>
        <ListView x:Name="FileList" IsEnabled="False" Width="200" Height="80" HorizontalAlignment="Left"/>
    </StackPanel>
</Page>
